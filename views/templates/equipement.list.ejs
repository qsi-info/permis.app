
<div class="row">
	<div class="col-md-10">
  <h3><%= __('Equipement.Choose') %></h3> 
  <br/>
	<input type="text" 
         id="equipementSearchInput" 
         ng-model="searchEquipement" 
         placeholder="<%= __('Equipement.Search') %>"
         class="form-control"/>
	<br/>

<div class="metro">
  <div data-role="listview" class="listview-outlook" ng-repeat="equipement in equipements | filter:searchEquipement | orderBy:'NIV1_CODE'">
    <a href="#/equipement/{{equipement.Expr1}}" class="list" data-user="">
      <div class="list-content">
        <span style="display: inline;" class="list-title">{{equipement.FUN_CODE}}</span>
        <span style="display: inline;" class="list-subtitle">{{equipement.FUN_DESCR}}</span>
        <span style="display: inline;" class="list-remark">{{equipement.NIV1_DESCR}}</span>
      </div>
    </a>
  </div>
</div>




	</div>
</div>
